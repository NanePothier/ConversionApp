<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_volume"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VolumeActivity"
    tools:showIn="@layout/activity_volume">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_heading"
                android:text="Volume"
                android:textSize="30dp"
                android:textColor="@color/darkpurple"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/volume_heading"
                android:text="Volume:"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_heading"/>

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/start_volume"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/lightpurple"
                app:layout_constraintStart_toEndOf="@id/volume_heading"
                app:layout_constraintTop_toBottomOf="@id/activity_heading"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/start_volume_heading"
                android:text="From:"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/volume_heading"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_volume_spinner"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/start_volume"
                app:layout_constraintStart_toEndOf="@id/start_volume_heading">
            </Spinner>

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/end_volume_heading"
                android:text="To:"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/start_volume_heading"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_volume_spinner"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/start_volume_spinner"
                app:layout_constraintStart_toEndOf="@id/end_volume_heading"
                >
            </Spinner>

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:id="@+id/volume_result"
                android:background="@drawable/thin_black_border_background"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="85dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/end_volume_heading"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_unit_volume"
                android:textSize="20dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="14dp"
                app:layout_constraintStart_toEndOf="@id/volume_result"
                app:layout_constraintTop_toBottomOf="@id/end_volume_spinner"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/convert_button_volume"
                android:text="Convert"
                android:textSize="18dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/volume_result"
                />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>